
#include "stdafx.h"
#include<iostream>
#include "conio.h"
using namespace std;


int main() {
	float costoenvio;
	float peso;
	cout << "Ingrese el peso: " << endl;
	cin >> peso;
	if ((peso<0)) {
		cout << "Valor invalido" << endl;
	} else {
		if ((peso<50)) {
			costoenvio = 1.5*peso;
		} else {
			if ((peso<=100)) {
				costoenvio = 4*peso;
			} else {
				if ((peso<=200)) {
					costoenvio = 6*peso;
				} else {
					if ((peso<=350)) {
						costoenvio = 10.5*peso;
					} else {
						if ((peso<=500)) {
							costoenvio = 15*peso;
						} else {
							cout << "No se puede enviar como carta" << endl;
						}
					}
				}
			}
		}
	}
	if ((peso<=500)) {
		cout << "El costo es de: " << costoenvio << endl;
	}
	getch();
}

